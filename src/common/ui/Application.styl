@import "../../imports"

html
	background-color gg-background-color
	color white
	font-family sans-serif
	font-size 14px
	height 100%
	overflow hidden

body
	height 100%

a
	&
	&:active
	&:visited
		color gg-link-color

p
	line-height 1.3
	text-align justify

@media screen and (max-width: 400px)
	.gg-md-and-more
		display none

@media screen and (max-width: 600px)
	.gg-lg-and-more
		display none

@media screen and (max-width: 920px)
	.gg-xl-and-more
		display none

.gg-application
	height 100%

	nav-height = 48px

	&-nav
		background-color gg-background-color-3
		font-size 18px
		height nav-height
		line-height nav-height

		> h1
			margin 0

		&-link
			height nav-height
			padding 0 23px

			&:hover
				background-color gg-nav-link-hover-bg-color

	&-locale
		background scroll transparent none no-repeat center center

		&[data-locale=ru]
			background-image url(/images/ru.png)

		&[data-locale=en]
			background-image url(/images/en.png)

		&-current
			padding 0
			width 58px

		&-dropdown
			display none
			position absolute
			z-index 1

		&-box:hover &-dropdown
			display block

		&-option
			margin 2px 2px 0 0
			size 30px 20px

	&-brand
		background scroll transparent url(/images/logo.svg) no-repeat 23px center
		background-size 24px 24px
		padding-left 64px

	&-gg-link
		background scroll transparent url(/images/gg-logo.svg) no-repeat center center
		width 32px

	&-donate
		&
		&:active
		&:visited
			color gg-donate-color

	&-page
		height "calc(100% - %s)" % nav-height
		overflow auto

	@media screen and (max-width: 600px)
		&-nav-link
			background-position center center
			box-sizing border-box
			padding 0
			text-align center
			width 25%
