@import "../imports"

html
	background-color gg-background-color
	color white
	font-family sans-serif
	font-size 14px
	height 100%
	overflow hidden

body
	height 100%

a
	&
	&:active
	&:visited
		color gg-link-color

.gg-application
	toolbar-height = 70px
	header-height = 50px
	grid-padding = 20px

	height 100%

	&-toolbar
	&-headers
		box-sizing border-box
		white-space nowrap

	&-toolbar
		height toolbar-height
		padding-left toolbar-height + 5px

	&-game-icon
		background-color rgba(200, 200, 200, 0.5)
		background-position center
		background-repeat no-repeat
		location 0 0 toolbar-height toolbar-height
		position absolute

	&-gg-link-box
		float right
		padding 5px

	&-game-name
		font-size 24px
		line-height 35px
		padding-bottom 5px
		padding-left 16px

	&-grid-link
		display inline-block
		padding 8px 16px
		border-radius 6px

		&:hover
			background-color rgba(255, 255, 255, 0.1)

		&.g-active
			background-color rgba(255, 255, 255, 0.2)
			color white

	&-headers
		font-size 18px
		height header-height
		overflow hidden
		padding grid-padding 100px 0 grid-padding /* 100px = hack for proper scrolling */

	&-grid
		box-sizing border-box
		height "calc(100% - %s)" % (toolbar-height + header-height)
		overflow auto
		padding grid-padding
		white-space nowrap
