@import "imports"

.gg-match
	position relative

	&-lines
		position absolute
		right (gg-column-line-width / 2)
		size 0 0
		top (gg-player-bottom-margin / 2) + gg-avatar-size - (gg-column-line-width / 2)

	&-line1
	&-line2
	&-line3
		border (gg-column-line-width / 2) solid gg-column-line-color
		border-radius (gg-column-line-width / 2)
		position absolute

	&-line1
	&-line2
		height 0
		width (gg-column-gap / 2)

	&-line2
	&-line3
		left (gg-column-gap / 2)

	&-line3
		width 0
